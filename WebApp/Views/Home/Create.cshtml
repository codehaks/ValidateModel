@model WebApp.Models.Movie

<h2>Create new Movie</h2>
<hr>

<form asp-action="create" asp-controller="home" method="POST" class="form">

    <input asp-for="Name" type="text" placeholder="Name" class="form-control" />
    <span asp-validation-for="Name" class="text-danger"></span>

    <br />
    <textarea asp-for="Summary" type="text" placeholder="Summary" class="form-control"></textarea>
    <span asp-validation-for="Summary" class="text-danger"></span>
    <br>
    <input asp-for="Year" type="text" placeholder="Year" class="form-control" />
    <span asp-validation-for="Year" class="text-danger"></span>

    <br>
    <button type="submit" class="btn btn-primary">Save</button>
    <a asp-action="index" asp-controller="home" class="btn btn-link">Back to home page</a>
</form>